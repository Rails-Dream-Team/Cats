<nav role="navigation" class="user-navigation">
  <div class="user-navigation--search">
    <%= render 'thredded/search/form' %>
  </div>

  <ul class="user-navigation--actions">
    <% if signed_in? %>
      <li class="main--nav--user">
        <%= link_to Thredded.user_path(current_user) do %>
        <span><%= current_user.display_name %></span>
        <% end %>
      </li>

      <% if messageboard.try(:persisted?) %>
        <li class="main--nav--notification--preferences">
          <%= link_to edit_messageboard_preferences_path(messageboard) do %>
          <span>Notification Settings</span>
          <% end %>
        </li>
      <% end %>

      <li class="main--nav--sign-out">
        <%= link_to main_app.destroy_user_session_path, method: :get do %>
        <span>Sign Out</span>
        <% end %>
      </li>
    <% else %>
      <li class="main--nav--sign-in-register">
        <%= link_to main_app.new_user_session_path do %>
          <span>Sign In / Register</span>
        <% end %>
      </li>
    <% end %>
  </ul>
</nav>
