<%= form_for @organization do |f| %>
  <% if @organization.errors.full_messages.present? %>
    <div class="org__formErrors">
      <h2>Uh oh! Your submission had the following errors:</h2>
      <ul>
        <% @organization.errors.full_messages.each do |message| %>
          <li>
            <%= message %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="orgForm__label">
    <div class="form">
      <%= f.label :name, "Name:" %>
      <%= f.text_field :name %>
    </div>
    <div class="form">
      <%= f.label :description, "Description:" %>
      <%= f.text_field :description, placeholder: " Your purpose/mission?" %>
    </div>
    <div class="form">
      <%= f.label :street_address, "Street Address:" %>
      <%= f.text_field :street_address %>
    </div>
    <div class="form">
      <%= f.label :city, "City:" %>
      <%= f.text_field :city %>
    </div>
    <div class="form">
      <%= f.label :state, "State:" %>
      <%= f.text_field :state %>
    </div>
    <div class="form">
      <%= f.label :zip_code, "Zipcode:" %>
      <%= f.text_field :zip_code %>
    </div>
    <div class="orgForm__submit"><%= f.submit 'Submit' %></div>
  </div>

<% end %>
