<%= form_for @organization do |f| %>
  <% if @organization.errors.full_messages.present? %>
  <div class="org__formErrors">
    <h2>Uh oh! Your submission had the following errors:</h2>
    <ul>
      <% @organization.errors.full_messages.each do |message| %>
        <li>
          <%= message %>
        </li>
      <% end %>
    </ul>
  </div>
  <% end %>
  <div class="orgForm__label">
      <div class="form">
        <%= f.label :name %>
        <%= f.text_field :name %>
      </div>
      <div class="form">
        <%= f.label :description %>
        <%= f.text_field :description %>
      </div>
      <div class="form">
        <%= f.label :street_address %>
        <%= f.text_field :street_address %>
      </div>
      <div class="form">
        <%= f.label :city %>
        <%= f.text_field :city %>
      </div>
      <div class="form">
        <%= f.label :state %>
        <%= f.text_field :state %>
      </div>
      <div class="form">
        <%= f.label :zip_code %>
        <%= f.text_field :zip_code %>
      </div>
      <div class="orgForm__submit"><%= f.submit 'Submit' %></div>
  </div>

<% end %>
