<div class="login__container">
  <div class="login__form">
    <div class="login__header">
      <h3 class="login__title">Log In</h3>
      <div class="login__sharedLinks">
        <%= render "users/shared/links" %>
      </div>
    </div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <% if alert %>
    <div class="login__alerts">
      <%= alert %>
    </div>
    <% end %>
    <% if notice %>
    <div class="login__notices">
      <%= notice %>
    </div>
    <% end %>
    <div class="login__emailField">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, placeholder: 'you@domain.com' %>
    </div>

    <div class="login__pwField">
      <%= f.label :password %>
      <%= f.password_field :password, autocomplete: "off", placeholder: 'password' %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="login__toggle">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="login__submit">
      <%= f.submit "Enter" %>
    </div>
    <% end %>

  </div>
</div>
